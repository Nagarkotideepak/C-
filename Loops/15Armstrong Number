//Armstrong Number
//if n=153 => 1^3 + 5^3 + 3^3=153
#include<iostream>
using namespace std;
int main(){
	int n,r,m,sum=0;
	cout<<"Enter n: ";
	cin>>n;
	m=n;
	 while(n>0){
	 	r=n%10;
	 	n/=10;
	 	sum+=(r*r*r);
	 }
	 if(sum==m){
	 	cout<<"It's a Armstrong Number!!!";
	 }
	 else{
	 	cout<<"It's not a Armstrong Number!!!";
	 }
	return 0;
}
